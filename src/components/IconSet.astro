---
const icons = [
  "highlight-off",
  "highlight-on",
  "home",
  "import",
  "in-progress",
  "information",
  "inspector-debug",
  "warning-grey",
  "spinner",
  "controllers",
  "change-version",
  "loading-steps",
  "lock-locked-active",
  "lock-locked",
  "lock-unlock",
  "machines",
  "maximise-bar",
  "menu",
  "minimise-bar",
  "minus",
  "models",
  "mount-2",
  "mount",
  "open-terminal",
  "pin",
  "plans",
  "plus",
  "pods",
  "power-error",
  "power-off",
  "power-on",
  "profile",
  "help",
  "restart",
  "revisions",
  "search",
  "security",
  "settings",
  "share",
  "show",
  "sort-both",
  "sort-down",
  "sort-up",
  "starred",
  "status-failed-small",
  "error",
  "status-in-progress-small",
  "status-in-progress",
  "status-queued-small",
  "status-queued",
];
---

<>
  <label class="p-switch u-hide--medium u-hide--small">
    <input
      type="checkbox"
      class="p-switch__input"
      role="switch"
      id="icon_switch"
    />
    <span class="p-switch__slider"></span>
    <span class="p-switch__label">Dark mode</span>
  </label>
  <div class={`icon-container`}>
    {
      icons.map((icon) => {
        return <i class={`p-icon--${icon}`} />;
      })
    }
  </div>
</>

<script>
  const iconSwitch = document.getElementById("icon_switch");
  const iconContainer = document.querySelector(".icon-container");

  iconSwitch?.addEventListener("change", (e: Event) => {
    if ((e?.target as HTMLInputElement)?.checked) {
      iconContainer?.classList.add("icon-container--dark");
    } else {
      iconContainer?.classList.remove("icon-container--dark");
    }
  });
</script>

