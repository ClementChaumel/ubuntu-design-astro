---
import Strip from "./Strip.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<Strip variation="accent" isDeep isSplitContent={!!title}>
  {
    title ? (
      <h1 class="p-heading--2" slot="small">
        {title}
      </h1>
    ) : null
  }
  <slot />
</Strip>
