---
import SplitContent from "./SplitContent.astro";
export interface Props {
  variation?: "light" | "accent";
  isDeep?: boolean;
  isBordered?: boolean;
  isSplitContent?: boolean;
}

const { variation, isDeep, isBordered, isSplitContent } = Astro.props;
---

<section
  class:list={[
    "l-full-width",
    `p-strip${variation ? `--${variation}` : ""}`,
    {
      "is-deep": isDeep,
      "is-bordered": isBordered,
    },
  ]}
>
  <div class="l-main">
    {
      isSplitContent ? (
        <SplitContent>
          <slot slot="small" name="small" />
          <slot />
        </SplitContent>
      ) : (
        <div class="row">
          <slot />
        </div>
      )
    }
  </div>
</section>
