---
export interface Props {
  variation?: "light" | "accent";
  isDeep?: boolean;
  isBordered?: boolean;
}

const { variation, isDeep, isBordered } = Astro.props;
---

<section
  class:list={[
    "l-full-width",
    `p-strip${variation ? `--${variation}` : ""}`,
    {
      "is-deep": isDeep,
      "is-bordered": isBordered,
    },
  ]}
>
  <div class="l-main">
    <div class="row">
      <slot />
    </div>
  </div>
</section>
