---
export interface Props {
  name: string;
  hex: string;
  cmyk: string;
  pantone?: string;
}

const { name, hex, cmyk, pantone } = Astro.props;
---

<div class="col-4 p-card">
  <div class="color-box" style={`background-color: ${hex};`}></div>
  <h3 class="p-card__title">{name}</h3>
  <h4>Screen</h4>
  <p class="p-card__content">HEX {hex}</p>
  <h4>Print</h4>
  <p class="p-card__content">
    {cmyk}
    {
      pantone ? (
        <>
          <br /> Pantone {pantone}
        </>
      ) : null
    }
  </p>

  <style lang="scss">
    .color-box {
      width: 100%;
      height: 100px;
      margin-bottom: 1rem;
    }
  </style>
</div>
